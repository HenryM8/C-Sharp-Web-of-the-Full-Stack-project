@model CGWEB.Entities.UserEnt

@{
    ViewBag.Title = "InicioSesion";
    Layout = "~/Views/Shared/_Layout - Inicio.cshtml";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                    <div class="d-flex justify-content-center py-4">
                        <a href="index.html" class="logo d-flex align-items-center w-auto">
                            <img src="~/Assets/img/logo-sm.png" alt="">
                            <span class="d-none d-lg-block">Críticas Gourmet</span>
                        </a>
                    </div><!-- End Logo -->

                    <div class="card mb-3">

                        <div class="card-body">

                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Iniciar sesión</h5>
                                <p class="text-center small">Ingresa tu usuario y contraseña</p>
                            </div>

                            @if (ViewBag.MsjPantalla != null)
                            {
                                <div style="color:white" class="alert alert-danger text-danger" role="alert">
                                    @ViewBag.MsjPantalla
                                </div>
                            }

                            <div class="row g-3">

                                <div class="col-12">
                                    <div class="form-floating">
                                        @Html.TextBoxFor(m => m.Username, new { @type = "text", @class = "form-control", @placeholder = "Nombre de usuario" })
                                        <label for="yourUsername">Nombre de usuario</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-floating">
                                        @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "form-control", @placeholder = "Contraseña" })
                                        <label for="password">Contraseña</label>
                                    </div>
                                </div>

                                <div class="col-12 mb-0">
                                    <button class="btn btn-success w-100" type="submit">Iniciar sesión</button>
                                </div>
                                <div class="col-12 text-center">
                                    <a style="font-size: 14px" href="@Url.Action("RecuperarContrasenna", "Home")">He olvidado mi contraseña</a>
                                </div>
                                <div class="col-12 text-center">
                                    <p class="small mb-0">No tienes una cuenta? <a href="@Url.Action("Registrarse", "Home")">Registrarse</a></p>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="credits">
                        <!-- All the links in the footer should remain intact. -->
                        <!-- You can delete the links only if you purchased the pro version. -->
                        <!-- Licensing information: https://bootstrapmade.com/license/ -->
                        <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/ -->
                        Diseñado por <a href="#">Grupo No.1</a>
                    </div>

                </div>
            </div>
        </div>

    </section>
}

