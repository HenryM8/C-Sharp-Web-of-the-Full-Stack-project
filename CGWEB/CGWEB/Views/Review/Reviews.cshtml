@model IEnumerable<CGWEB.Entities.ReviewEnt>

@{
    ViewBag.Title = "Reviews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card card-default">
            <div class="card-header" style="margin-inline: 20px">
                <div class="pagetitle">
                    <h1 class="mt-2">Reseñas</h1>
                </div>
            </div>
            <div class="card-body my-2">
                <table class="datatable">
                    <thead>
                        <tr>
                            <th>Valoración</th>
                            <th>Comentario</th>
                            <th>Fecha</th>
                            <th>Restaurante</th>
                            <th>Usuario</th>
                            <th>Estado</th>
                            <th>Cambiar estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Rating</td>
                                <td>@item.Review_content</td>
                                <td>@item.Review_date.ToString("yyyy/MM/dd")</td>
                                <td>@item.Restaurant</td>
                                <td>@item.User</td>
                                @if (item.Is_visible == true)
                                {
                                    <td><i class="bi bi-eye text-success"></i></td>
                                }
                                else
                                {
                                    <td><i class="bi bi-eye-slash text-danger"></i></td>
                                }
                                <td style="text-align:center">
                                    <a href="@Url.Action("ChangeReviewVisibility","Review", new { q = item.Review_id })"><i class="bi bi-arrow-down-up"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


